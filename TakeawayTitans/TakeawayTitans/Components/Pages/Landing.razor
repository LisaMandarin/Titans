@page "/"
@layout Layout.EmptyLayout
@using TakeawayTitans.Components.Layout

<PageTitle>Takeaway Titans</PageTitle>
<div class="page">
    <div class="hero-container">
        <img src="landing-image.webp" alt="wooden board with vegetable and bread" class="hero-image"/>
        <div class="hero-title-container">
            <p class="hero-title">Takeaway Titans</p>
            <p class="hero-subtitle">Pick-Up Right Away</p>
        </div>
    </div>
    <div class="btn-container">
        <button class="btn btn-menu">VIEW MENU</button>
        <button class="btn btn-order">ORDER ONLINE</button>
        <button class="btn btn-track">TRACK ORDER</button>
    </div>
    <Footer />
</div>
